<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      <!-- explicit list view definition -->
  
      <record model="ir.ui.view" id="sejour_list_view">
        <field name="name">sejours list</field>
        <field name="model">resacolo.sejours</field>
        <field name="arch" type="xml">
          <tree>
            <field name="nom"/>
            <field name="organisateur"/>
            <field name="prix_un"/>
            <field name="prix_deux"/>
            <field name="date_retour_deux"/>
            <field name="creation_date"/>
          </tree>
        </field>
      </record>
  
        <!-- explicit form view definition -->
        <!-- 
          === variables === 
          nom
          description
          organisateur
          creation_date
          date_depart_un
          date_retour_un
          date_depart_deux
          date_retour_deux
          date_depart_trois
          date_retour_trois
          prix_un 
          prix_deux 
          prix_trois 
          prix_option_un 
          prix_option_deux 
          prix_option_trois 
          nom_option_un
          nom_option_deux
          nom_option_trois
          description_option_un
          description_option_deux
          description_option_trois
          compteur_participants
          place_max
        -->
  
      <record model="ir.ui.view" id="sejours_form_view">
        <field name="name">Sejours Form</field>
        <field name="model">resacolo.sejours</field>
        <field name="arch" type="xml">
          <form>
            <group>
              <field name="nom"/>
              <field name="description"/>
              <field name="organisateur"/>
              <field name="reference"/>
              <field name="creation_date"/>>

              <field name="date_depart_un"/>
              <field name="date_retour_un"/>

              <field name="date_depart_deux"/>
              <field name="date_retour_deux"/>

              <field name="date_depart_trois"/>
              <field name="date_retour_trois"/>

              <field name="prix_un"/>
              <field name="prix_deux"/>
              <field name="prix_trois"/>

              <field name="prix_option_un"/>
              <field name="prix_option_deux"/>
              <field name="prix_option_trois"/>

              <field name="nom_option_un"/>
              <field name="nom_option_deux"/>
              <field name="nom_option_trois"/>

              <field name="description_option_un"/>
              <field name="description_option_deux"/>
              <field name="description_option_trois"/>

              <field name="place_max"/>
              <field name="compteur_place"/>

            </group>
          </form>
        </field>
      </record>
      <!-- actions opening views on models -->
  
      <record model="ir.actions.act_window" id="sejours_action_window">
        <field name="name">sejours window</field>
        <field name="res_model">resacolo.sejours</field>
        <field name="view_mode">tree,form</field>
      </record>
  
      <!-- Top menu item -->
  
      <menuitem name="resacolo" id="resacolo.menu_root"/>
  
      <!-- menu categories -->
  
      <menuitem name="sejours" id="resacolo_sejours_cat" parent="resacolo.menu_root"/>
      <!--<menuitem name="Menu 2" id="university.menu_2" parent="university.menu_root"/>-->
  
      <!-- actions -->
  
      <menuitem name="List of sÃ©jours" id="resacolo_sejours_list" parent="resacolo_sejours_cat"
                action="sejours_action_window"/>
      <!--<menuitem name="Server to list" id="university" parent="university.menu_2"-->
                <!--action="university.action_server"/>-->
  
    </data>
  </odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
      <!-- explicit list view definition -->
  
      <record model="ir.ui.view" id="student_list_view">
        <field name="name">participants list</field>
        <field name="model">resacolo.participants</field>
        <field name="arch" type="xml">
          <tree>
            <field name="f_name"/>
            <field name="l_name"/>
            <field name="sexe"/>
            <field name="identity_card"/>
            <field name="birthday"/>
            <field name="registration_date"/>
          </tree>
        </field>
      </record>
  
      <!-- explicit from view definition -->
  
      <record model="ir.ui.view" id="participants_form_view">
        <field name="name">participants form</field>
        <field name="model">resacolo.participants</field>
        <field name="arch" type="xml">
          <form>
            <group>
              <field name="f_name"/>
              <field name="l_name"/>
              <field name="sexe"/>
              <field name="phone"/>
              <field name="birthday"/>
              <field name="registration_date"/>
              <field name = "adresse_diff"/>
              <field name="zip"/>
              <field name="street"/>
              <field name="city"/>
              <field name="email"/>
              <field name="phone"/>
            </group>
          </form>
        </field>
        </record>

        <!--
        <field name="name">adresse Form</field>
        <field name="model">resacolo.adresse</field>
        <field name="arch" type="xml">
          <form>
            <group>
                <field name = "adresse_diff"/>
                <field name="zip"/>
                <field name="street"/>
                <field name="city"/>
            </group>
          </form>
      </record>
      -->
      <!-- actions opening views on models -->
  
      <record model="ir.actions.act_window" id="participants_action_window">
        <field name="name">participants window</field>
        <field name="res_model">resacolo.participants</field>
        <field name="view_mode">tree,form</field>
      </record>

      <!--
      <record model="ir.actions.act_window" id="adresse_action_window">
        <field name="name">adresse window</field>
        <field name="res_model">resacolo.adresse</field>
        <field name="view_mode">tree,form</field>
      </record>
      -->
  
      <!-- Top menu item -->
  
      <menuitem name="Resacolo" id="resacolo.menu_root"/>
  
      <!-- menu categories -->
  
      <menuitem name="participants" id="resacolo_participants_cat" parent="resacolo.menu_root"/>
      <!--<menuitem name="Menu 2" id="university.menu_2" parent="university.menu_root"/>-->
  
      <!-- actions -->
  
      <menuitem name="List of participants" id="resacolo_participants_list" parent="resacolo_participants_cat"
                action="participants_action_window"/>
      <!--<menuitem name="Server to list" id="university" parent="university.menu_2"-->
                <!--action="university.action_server"/>-->
  
    </data>
  </odoo>